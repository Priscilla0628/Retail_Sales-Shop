SELECT* FROM RETAIL_SALES.SALES.RETAIL_TRANSACTIONS;
SELECT MIN(TOTAL_AMOUNT)
FROM RETAIL_SALES.SALES.RETAIL_TRANSACTIONS;
SELECT MAX(TOTAL_AMOUNT)
FROM RETAIL_SALES.SALES.RETAIL_TRANSACTIONS;

SELECT
SUM(TOTAL_AMOUNT)AS TOTAL_REVENUE,
SUM(QUANTITY)AS UNITS_SOLD,
SUM(PRICE_PER_UNIT)AS TOTAL_PRICE_PER_UNIT,
COUNT(DISTINCT CUSTOMER_ID)AS NUMBER_OF_CUSTOMERS,
COUNT(DISTINCT TRANSACTION_ID)AS NUMBER_OF_TRANSACTIONS,
GENDER,PRODUCT_CATEGORY,

CASE
    WHEN AGE BETWEEN 0 AND 12 THEN 'KIDS'
    WHEN AGE BETWEEN 13 AND 19 THEN 'TEENAGERS'
    WHEN AGE BETWEEN 20 AND 35 THEN 'YOUNG ADULTS'
    WHEN AGE BETWEEN 36 AND 48 THEN 'ADULTS'
    ELSE 'SENIOR CITIZEN'
    END AS AGE_GROUP,

CASE
    WHEN TOTAL_AMOUNT BETWEEN 0 AND 50 THEN 'LOW SPEND'
    WHEN TOTAL_AMOUNT BETWEEN 51 AND 500 THEN 'MEDIUM SPEND'
    WHEN TOTAL_AMOUNT BETWEEN 501 AND 1500 THEN 'HIGH SPEND'
    ELSE 'VERY HIGH'
END AS SPEND_BANDS,

TO_DATE(DATE)AS PURCHASE_DATE,
DAYNAME(TO_DATE(DATE))AS DAYS_OF_WEEK,
MONTHNAME(TO_DATE(DATE))AS MONTH_OF_YEAR

FROM RETAIL_SALES.SALES.RETAIL_TRANSACTIONS
GROUP BY ALL;
